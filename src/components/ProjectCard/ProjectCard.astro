---
const { project_name, project_image, project_id, project_gradient, project_font, project_description_short, project_tech_stack } = Astro.props;
// import { ProjectCards } from "./ProjectCard";
interface Props {
  project_id: string;
  project_image: string;
  project_name: string;
  project_gradient?: string;
  project_font:string;
  project_description_short:string;
  project_tech_stack:string[];
}

console.log(project_tech_stack);
---

<div id={project_id}
  class="card2 w-full h-72 grid"
>









<div id=`info_${project_id}` class="opacity-0 hover:opacity-100  duration-300 rounded-2xl w-full min-h-full bg-primary1 z-20 col-start-1 row-start-1 transition ease-in-out grid justify-center align-middle text-primary2 py-10">
<div class="row-start-1 col-start-1">
<h4 class="text-center text-2xl">{project_name}</h4>

<p class=" text-accent1">
{project_tech_stack.map((stack, index)=>{
  return project_tech_stack.length === (index+1) ? <span>{stack}</span>:<span>{stack}</span> <span class="mx-1">/</span>
})}
</p>
</div>
<button class="border border-accent1 h-fit w-fit self-end justify-self-center py-2 px-6 rounded-md">LEARN MORE</button>
</div>















<div class="relative overflow-hidden grid w-full h-full rounded-2xl col-start-1 row-start-1 transition ease-in-out">
{project_image ? <div class="absolute top-0 left-0 w-full min-h-full bg-primary1/70"></div> 
<img
    
    class="h-full w-full object-cover rounded-2xl col-start-1 row-start-1"
    src={project_image}
    alt=""
  />  
:  <div class="absolute top-0 left-0 w-full min-h-full bg-black bg-gradient-to-r from-project_gradient row-start-1 col-span-2  flex"></div>}
  <!-- <p  style=`font-family:${project_font}` class="w-min leading-none col-start-1 row-start-1 self-center justify-self-center text-white z-10 text-[30px] flex-wrap">{project_name}</p> -->
  </div>


</div>
